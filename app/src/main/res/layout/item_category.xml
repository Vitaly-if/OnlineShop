<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.example.onlineshop.signin.MyImageButton
        android:id="@+id/itemCategoryImageButton"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/circle_category_background"
        android:src="@drawable/ic_phone" />

    <com.example.onlineshop.signin.MyTextView
        android:id="@+id/nameCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:textColor="@color/gray_300"
        android:textSize="10sp"
        app:fontFamily="@font/poppins_medium"
        tools:text="Phones" />
</LinearLayout>